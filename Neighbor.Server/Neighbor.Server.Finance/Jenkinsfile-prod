pipeline {
    agent any

    stages {
        stage('Code Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'GitHub', url: 'https://github.com/arrakya/Neighbor.Core.git']]])
            }
        }
        stage('Start Finance Database'){
            steps {
                script {
                    catchError {
                        sh 'docker container rm db-finance-prod --force'
                    }
                    sh 'docker-compose -f ./Neighbor.Server/docker-compose-prod.yml up -d db-finance'
                }
            }
        }
        stage('Build Finance Image') {
            steps {
                script {
                    sh 'docker build -f ./Neighbor.Server/Neighbor.Server.Finance/Dockerfile -t arrak/neighbor.server.finance.prod:latest . --build-arg EnvName=Production --no-cache'
                }
            }
        }
        stage('Start Finance Service') {
            steps {
                script {
                     catchError {
                        sh 'docker container rm web-finance-prod --force'
                    }
                    sh 'docker-compose -f ./Neighbor.Server/docker-compose-prod.yml up -d web-finance'
                }
            }
        }
    }
}
