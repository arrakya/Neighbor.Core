<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neighbor.Mobile.Views.SelectEnvironmentPage"
             Title="Select Environment">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveSelectEnvironmentCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand"
                     Margin="20,40,20,40">
            <Label Text="Environments"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Picker SelectedItem="{Binding SelectedEnvironment}">
                <Picker.Items>
                    <x:String>Production</x:String>
                    <x:String>SIT</x:String>
                    <x:String>Development</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Save" Command="{Binding SaveSelectEnvironmentCommand}"></Button>
            <Button Text="Cancel" Command="{Binding CancelSelectEnvironmentCommand}" BackgroundColor="Gray"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>